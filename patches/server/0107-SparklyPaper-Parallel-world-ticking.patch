+package org.dreeam.leaf.config.modules.async;
+
+import org.dreeam.leaf.config.ConfigModules;
+import org.dreeam.leaf.config.EnumConfigCategory;
+import org.dreeam.leaf.config.LeafConfig;
+
+public class ParallelWorldTicking extends ConfigModules {
+
+    public String getBasePath() {
+        return EnumConfigCategory.ASYNC.getBaseKeyName() + ".parallel-world-ticking";
+    }
+
+    public static int threads = 8;
+    public static boolean logContainerCreationStacktraces = false;
+
+    @Override
+    public void onLoaded() {
+        config.addComment(getBasePath(), """
+                Make entity tracking saving asynchronously, can improve performance significantly,
+                especially in some massive entities in small area situations.
+                """);
+
+        threads = config().getInt(getBasePath() + ".threads", threads);
+        logContainerCreationStacktraces = java.lang.Boolean.getBoolean("sparklypaper.logContainerCreationStacktraces");
+
+        if (threads < 0)
+            threads = Math.max(Runtime.getRuntime().availableProcessors() + threads, 1);
+        else if (threads == 0)
+            threads = Math.max(Runtime.getRuntime().availableProcessors() / 4, 1);
+
+        LeafConfig.LOGGER.info("Using {} threads for Async Entity Tracker", threads);
+    }
+}
